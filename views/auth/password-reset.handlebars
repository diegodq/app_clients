<!--begin::Root-->
<div class="d-flex flex-column flex-root">
	<!--begin::Authentication - Password reset -->
	<div
		class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed">
		<!--begin::Content-->
		<div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
			<!--begin::Logo-->
			<a href="/" class="mb-12">
				<img alt="Logo" src="/assets/media/logos/logo.png" class="h-75px" />
			</a>
			<!--end::Logo-->
			<!--begin::Wrapper-->
			<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
				<!--begin::Form-->
				<form class="form w-100" novalidate="novalidate" id="form-password-reset">
					<!--begin::Heading-->
					<div class="text-center mb-10">
						<!--begin::Title-->
						<h1 class="text-dark mb-8">Esqueceu sua senha? </h1>
						<!--end::Title-->
						<!--begin::Link-->
						<div class="text-gray-400 fw-bold fs-4 mt-3">Vamos te ajudar a recuperar sua senha. Basta
							inserir a informação solicitada e prosseguir com a recuperação.</div>
						<!--end::Link-->
					</div>
					<!--begin::Heading-->
					<!--begin::Input group-->
					<div class="fv-row mb-10">
						<label class="form-label fw-bolder text-gray-900 fs-6 required">Insira seu e-mail:</label>
						<input class="form-control form-control-solid" type="email" placeholder="" name="email"
							autocomplete="off" />
					</div>
					<!--end::Input group-->
					<!--begin::Actions-->
					<div class="d-flex flex-wrap justify-content-center">
						<button type='submit' id='button-send-reset-password' class='btn btn-primary w-30 mx-3'>
							<span class='indicator-label'>ENVIAR</span>
							<span class='indicator-progress'>
								<span class='spinner-border spinner-border-sm align-middle ms-2'></span>
							</span>
						</button>
						<button id="button-cancel-reset-password"
							class="btn btn-active-light fw-bolder w-30 mx-3">CANCELAR</button>
					</div>
					<!--end::Actions-->
				</form>
				<!--end::Form-->
			</div>
			<!--end::Wrapper-->
		</div>
		<!--end::Content-->

	</div>
	<!--end::Authentication - Password reset-->
</div>

<div id="spinner-overlay">
  <div class="spinner-border text-danger text-f05742" role="status">
    <span class="visually-hidden">Carregando...</span>
  </div>
</div>
