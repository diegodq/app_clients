<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
	<!--begin::Post-->
	<div class="post d-flex flex-column-fluid" id="kt_post">
		<!--begin::Container-->
		<div id="kt_content_container" class="container-xxl mt-6">
			<!--begin::Card-->
			<div class="card">
				<!--begin::Card header-->
				<div class="card-header border-0 pt-6">
					<!--begin::Card title-->
					<h1 class="text-center text-muted fw-bolder mt-5 mb-5 ml-2">Cadastro de Tópicos Avaliáveis</h1>
					<h3 class="text-center text-muted fw-bolder mt-5 mb-5 ml-2"> Os tópicos serão os itens avaliáveis
						que estarão disponíveis ao configurar sua pesquisa em Gestão de Pesquisa.</h3>
					<div class="card-title">
						<!--begin::Search-->
						<div class="d-flex align-items-center position-relative my-1">
							<!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
							<span class="svg-icon svg-icon-1 position-absolute ms-6">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
									fill="none">
									<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1"
										transform="rotate(45 17.0365 15.1223)" fill="black" />
									<path
										d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z"
										fill="black" />
								</svg>
							</span>
							<!--end::Svg Icon-->
							<input type="text" data-kt-subscription-table-filter="search" id="search-input"
								class="form-control form-control-solid w-250px ps-14" placeholder="Procurar" />
						</div>
						<!--end::Search-->
					</div>
					<!--begin::Card title-->
					<!--begin::Card toolbar-->
					<div class="card-toolbar">
						<!--begin::Toolbar-->
						<div class="d-flex justify-content-end" data-kt-subscription-table-toolbar="base">
							<!--end::Filter-->
							<!--begin::Add subscription-->
							<a id="button-add-topics" class="btn btn-primary">
								<!--begin::Svg Icon | path: icons/duotune/arrows/arr075.svg-->
								<span class="svg-icon svg-icon-2">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
										fill="none">
										<rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1"
											transform="rotate(-90 11.364 20.364)" fill="black" />
										<rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="black" />
									</svg>
								</span>
								<!--end::Svg Icon-->Tópicos</a>
							<!--end::Add subscription-->
						</div>
						<!--end::Toolbar-->
					</div>
					<!--end::Card toolbar-->

				</div>
				<!--end::Card header-->
				<!--begin::Card body-->
				<div class="card-body pt-0 mt-5">

					<table class="table table-striped table-bordered table-hover align-middle fs-6 gy-5"
						id="topics_table">
						<thead>
							<tr class="text-center text-muted  fw-bolder fs-7 text-uppercase gs-0">
								<th class="w-25">ID</th>
								<th class="w-50">TOPICOS</th>
								<th class="w-25">ATIVO</th>
								<th class="w-25">OPÇÕES</th>
							</tr>
						</thead>

						<tbody class="text-center text-gray-600 fw-bold">


						</tbody>

					</table>

					<div class="d-flex justify-content-center text-gray-500 align-items-center m-5"
						id="field-no-topics"></div>

				</div>
				<!--end::Card body-->
			</div>
		</div>
		<!--end::Card-->
		<!--begin::Modals-->
		<!--end::Modals-->
		<!--begin::Modal - Adjust Balance-->
		<div class="modal fade" id="modal-register-topics" tabindex="-1" aria-hidden="true">
			<!--begin::Modal dialog-->
			<div class="modal-dialog modal-dialog-centered mw-650px">
				<!--begin::Modal content-->
				<div class="modal-content">
					<!--begin::Modal header-->
					<div class="modal-header">
						<!--begin::Modal title-->
						<h2 class="fw-bolder text-center">Cadastre um Tópico Avaliável</h2>
						<!--end::Modal title-->
					</div>
					<!--end::Modal header-->
					<!--begin::Modal body-->
					<div class="modal-body mx-5 mx-xl-15 my-7">
						<!-- begin::Form -->
						<form id="topics-form" class="form">
							<!-- begin::Input group -->
							<div class="fv-row mb-4">
								<label class="fs-5 fw-bold form-label mb-2">Qual tópico deseja cadastrar?</label>
								<input class="form-control form-control-solid"
									placeholder="Ex: Atendimento ou Promoções" id="input-name-topic" name="name" />
							</div>
							<div class="form-check form-check-solid fv-row mb-4 d-flex align-items-center">
								<input name="indicate_employee" class="form-check-input" type="checkbox" value=""
									id="indicate_employee" />
								<label class="form-check-label fw-bold ps-2 fs-6" for="indicate_employee">Solicitar
									indicação de colaborador para este tópico.</label>
							</div>
							<!-- end::Input group -->


							<!-- begin::Actions -->
							<div class="d-flex justify-content-center">
								<button type="reset" id="button-cancel-add-topics"
									class="btn btn-light me-3">Cancelar</button>
								<button type="submit" id="button-submit-register-topic" class="btn btn-primary">
									<span class="indicator-label" id="span-button-register-topic"></span>
									<span class="indicator-progress">
										<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
									</span>
								</button>
							</div>
							<!-- end::Actions -->
						</form>
						<!-- end::Form -->
					</div>
					<!--end::Modal body-->
				</div>
				<!--end::Modal content-->
			</div>
			<!--end::Modal dialog-->
		</div>
		<!--end::Modal - New Card-->
	</div>

	<!-- Modal de Alerta -->
	<div class="modal fade " id="alertModal" tabindex="-1" aria-labelledby="alertModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-body">
					<!-- Conteúdo do alerta -->
					<div class="alert alert-dismissible d-flex flex-center flex-column py-10 px-10 px-lg-20 mb-10">

						<!--begin::Wrapper-->
						<div class="text-center">

							<!--begin::Title-->
							<h1 id='title-modal-confirm' class="fw-bolder-especial mb-5"></h1>
							<!--end::Title-->

							<!--begin::Separator-->
							<div class="separator separator-dashed border-danger opacity-25 mb-5"></div>
							<!--end::Separator-->

							<!--begin::Content-->
							<div id="text-modal-confirm" class="mb-12 text-dark fs-7 mt-9"></div>
							<!--end::Content-->

							<!--begin::Buttons-->
							<!--begin::Svg Icon | path: assets/media/icons/duotune/abstract/abs012.svg-->
							<div id='icon-modal-confirm'>

							</div>

							{{!-- --}}
							<!--end::Svg Icon-->


							<!--end::Svg Icon-->
							<!--end::Buttons-->
						</div>
						<!--end::Wrapper-->
					</div>
					<!--end::Alert-->
					<!-- Código HTML do alerta -->
				</div>
			</div>
		</div>
	</div>
</div>

